@model SurveyConfiguratorApp.Domain.Questions.QuestionFaces
@using SurveyConfiguratorWeb.Languages
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal my-3">
    <h4>@Language.QUESTION_FACES</h4>
    <hr />
    @Html.HiddenFor(model => model.Id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    @Html.Partial("Questions/_Create",Model)
   

    <input type="number" name="Id" value="@Model.Id" class="d-none" />
   

    <div class="form-group">
        <label for="@nameof(Model.FacesNumber)" class = "control-label col-md-2">@Language.FACES_NUMBER</label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.FacesNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FacesNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group my-2">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Language.SAVE" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.Partial("Questions/_BackToList")
</div>
