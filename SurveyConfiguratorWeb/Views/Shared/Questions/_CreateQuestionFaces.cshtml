@model SurveyConfiguratorApp.Domain.Questions.QuestionFaces
@*@model SurveyConfiguratorWeb.Models.QuestionModel*@

@using (Html.BeginForm("Create", "Question", FormMethod.Post))
    {

<div class="">
    @Html.Partial("Questions/_Create", Model)
    <div class="mb-3">
         <label for="@nameof(Model.FacesNumber)" class="form-label">Faces Number</label>
        @Html.TextBoxFor(model => model.FacesNumber, new { @class = "form-control", type = "number", min = "2", max = "100" })
        @Html.ValidationMessageFor(model => model.FacesNumber, "", new { @class = "text-danger" })

    </div>

</div>
<div class="row w-100 text-center justify-content-center">
    <input type="submit" value="Save" class="btn btn-primary col-md-12 col-12 text-center" />

</div>
 } 