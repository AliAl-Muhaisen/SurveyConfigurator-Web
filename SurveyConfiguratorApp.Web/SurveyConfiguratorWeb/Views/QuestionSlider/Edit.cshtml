@model SurveyConfiguratorApp.Domain.Questions.QuestionSlider
@using SurveyConfiguratorWeb.Languages
@using SurveyConfiguratorWeb.Models

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class=" row my-3">
    <h4>@Language.QUESTION_SLIDER</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.Partial(Routes.PATH_QUESTION_CRAETE_FILE, Model)


    <div class="form-group col-md-12 my-2" >
        <label for="@nameof(Model.StartValue)" class="form-label col-md-2">@Language.START_VALUE</label>

        <div class="">
            @Html.EditorFor(model => model.StartValue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StartValue, "", new { @class = "text-danger" })
        </div>
    </div>

<div class="form-group my-2">
    <label for="@nameof(Model.EndValue)" class="form-label col-md-2">@Language.END_VALUE</label>
    <div class="col-md-12">
        @Html.EditorFor(model => model.EndValue, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EndValue, "", new { @class = "text-danger" })
    </div>
</div>


<div>
<div class=" my-2 col-md-12">
   
    <div class="">
        <label for="@nameof(Model.StartCaption)" class="form-label col-md-2">@Language.START_CAPTION</label>

        @Html.EditorFor(model => model.StartCaption, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StartCaption, "", new { @class = "text-danger" })
    </div>
</div>
</div>
<div class=" col-md-12 my-2">
    <div class="">
        <label for="@nameof(Model.EndCaption)" class="form-label col-md-2">@Language.END_CAPTION</label>

        @Html.EditorFor(model => model.EndCaption, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EndCaption, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group my-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Language.SAVE" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.Partial(Routes.PATH_BACK_TO_LIST_FILE)
</div>
