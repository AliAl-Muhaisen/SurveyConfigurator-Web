@model SurveyConfiguratorApp.Domain.Questions.QuestionSlider
@using SurveyConfiguratorWeb.Languages
@using SurveyConfiguratorWeb.Models

<div class="shadow border p-2 rounded-2 my-3 my-md-5 bg-white">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class=" row">
        <h4>@Language.QUESTION_SLIDER</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.Partial(Routes.PATH_QUESTION_CRAETE_FILE, Model)

        @Html.Partial(Routes.PATH_QUESTION_SLIDER_CRAETE_FILE, Model)


    </div>
    }

    <div>
        @Html.Partial(Routes.PATH_BACK_TO_LIST_FILE)
    </div>
</div>

<script src="~/Scripts/Question/QuestionValidation.js"></script>
