@model SurveyConfiguratorApp.Domain.Questions.QuestionSlider
@using SurveyConfiguratorWeb.Languages
@using SurveyConfiguratorWeb.Models
<div class="my-3">
    <h4>@Language.QUESTION_SLIDER</h4>
    <hr />
    <div class="row" dir="auto">
        <div class="col-12 row">
            <div class="col-md-2">
                <p class="fw-bold">
                    @Language.TEXT
                </p>

            </div>
            <div class="col-md-10">
                <p>
                    @Html.DisplayFor(model => model.Text)
                </p>
            </div>
        </div>



        <div class="col-12 row">
            <div class="col-md-2">
                <p class="fw-bold">
                    @Language.ORDER
                </p>

            </div>
            <div class="col-md-10">
                <p>
                    @Html.DisplayFor(model => model.Order)
                </p>
            </div>
        </div>

        <div class="col-md-2">
            <p class="fw-bold">
                @Language.START_VALUE
            </p>

        </div>
        <div class="col-md-10">
            <p>
                @Html.DisplayFor(model => model.StartValue)
            </p>
        </div>
    </div>
    <div class="col-12 row">
        <div class="col-md-2">
            <p class="fw-bold">
                @Language.END_VALUE
            </p>

        </div>
        <div class="col-md-10">
            <p>
                @Html.DisplayFor(model => model.EndValue)
            </p>
        </div>
    </div>

    <div class="col-12 row">
        <div class="col-md-2">
            <p class="fw-bold">
                @Language.START_CAPTION
            </p>

        </div>
        <div class="col-md-10">
            <p>
                @Html.DisplayFor(model => model.StartCaption)
            </p>
        </div>
    </div>

    <div class="col-12 row">
        <div class="col-md-2">
            <p class="fw-bold">
                @Language.END_CAPTION
            </p>

        </div>
        <div class="col-md-10">
            <p>
                @Html.DisplayFor(model => model.EndCaption)
            </p>
        </div>
    </div>



</div>
<p>
    @Html.ActionLink(Language.EDIT, Routes.EDIT, new { id = Model.Id }) |
    @Html.Partial(Routes.PATH_BACK_TO_LIST_FILE)
</p>
